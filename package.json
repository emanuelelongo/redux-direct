  "license": "ISC",
  "bugs": {
    "url": "https://github.com/emanuelelongo/redux-reduced/issues"
  },
  "homepage": "https://github.com/emanuelelongo/redux-reduced#readme",
  "dependencies": {
    "babel-cli": "^6.26.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-stage-0": "^6.24.1"
  },
  "devDependencies": {
    "codecov": "^3.0.0",
    "jest": "^21.2.1"
